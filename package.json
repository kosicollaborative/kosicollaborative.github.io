{
  "name": "hugoplate",
  "description": "hugo tailwindcss boilerplate",
  "version": "1.8.0",
  "license": "MIT",
  "author": "zeon.studio",
  "scripts": {
    "dev": "tinacms dev -c \"hugo server\"",
    "build": "tinacms build && hugo --gc --minify --templateMetrics --templateMetricsHints --forceSyncStatic",
    "test": "hugo server --disableFastRender --navigateToChanged --templateMetrics --templateMetricsHints --watch --forceSyncStatic -e production --minify",
    "project-setup": "node ./scripts/projectSetup.js",
    "theme-setup": "node ./scripts/themeSetup.js",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-go-template": "0.0.15",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwind-bootstrap-grid": "^5.0.1",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "@tinacms/cli": "^1.5.31",
    "tinacms": "^1.5.22"
  }
}
